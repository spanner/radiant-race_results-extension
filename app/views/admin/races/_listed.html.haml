%tr.node.level-1
  - render_region :tbody do |tbody|
    - tbody.title_cell do
      %td.title
        = link_to race.name, edit_admin_race_url(race)

    - tbody.instances_cell do
      %td.race_instances
        - race.instances.each do |ri|
          = link_to ri.name, edit_admin_race_instance_url(ri)
        = link_to "new results", new_admin_race_race_instance_url(race)

    - tbody.modify_cell do
      %td.remove
        - if admin?
          = link_to(image('remove', :alt => 'Remove Race'), admin_race_url(reader), :method => :delete, :confirm => "really delete race #{race.name}?") 
